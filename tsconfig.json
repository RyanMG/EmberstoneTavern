{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@api/*": ["lib/api/*"],
      "@classes/*": ["./lib/classes/*"],
      "@components/*": ["./components/*"],
      "@constants/*": ["lib/constants/*"],
      "@context/*": ["lib/context/*"],
      "@definitions/*": ["lib/definitions/*"],
      "@hooks/*": ["lib/hooks/*"],
      "@images/*": ["./assets/images/*"],
      "@utils/*": ["lib/utils/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
