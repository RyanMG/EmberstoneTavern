{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@images/*": ["./assets/images/*"],
      "@types/*": ["./types/*"],
      "@components/*": ["./components/*"],
      "@constants/*": ["./constants/*"],
      "@context/*": ["./app/context/*"],
      "@hooks/*": ["./app/hooks/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
